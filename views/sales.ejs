<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bán hàng</title>
    <!-- Thêm CSS (Bootstrap hoặc CSS tùy chỉnh) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/sale.css"> <!-- Đường dẫn tới CSS tùy chỉnh -->
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar bên trái chứa các danh mục -->
            <div class="col-md-2">
                <div class="list-group">
                    <a href="#" class="list-group-item list-group-item-action active">Tất cả</a>
                    <% categories.forEach(category => { %>
                        <a href="#" class="list-group-item list-group-item-action"><%= category %></a>
                    <% }) %>
                </div>
            </div>

            <!-- Phần sản phẩm ở giữa -->
            <div class="col-md-7">
                <div class="row">
                    <% products.forEach(product => { %>
                        <div class="col-md-3 mb-4">
                            <div class="card">
                                <img src="<%= product.imageUrl %>" class="card-img-top" alt="Product Image">
                                <div class="card-body text-center">
                                    <h6 class="card-title"><%= product.name %></h6>
                                    <p class="card-text"><%= product.price %>đ</p>
                                    <button class="btn btn-primary add-to-cart" data-id="<%= product._id %>">Thêm vào giỏ</button>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>

            <!-- Phần giỏ hàng bên phải -->
            <div class="col-md-3">
                <div class="cart">
                    <h5>Giỏ hàng</h5>
                    <ul class="list-group" id="cart-items">
                        <!-- Các sản phẩm trong giỏ hàng sẽ được thêm động -->
                    </ul>
                    <div class="mt-3">
                        <p>Tạm tính: <span id="subtotal">0đ</span></p>
                        <p>Thuế hóa đơn: <span id="tax">0đ</span></p>
                        <p>Chiết khấu: <span id="discount">0%</span></p>
                        <h5>Tổng cộng: <span id="total">0đ</span></h5>
                        <button class="btn btn-success w-100">Thanh toán</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Thêm JS (Bootstrap và jQuery) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Thêm JavaScript để xử lý giỏ hàng -->
    <script>
        const cart = [];
        
        $('.add-to-cart').on('click', function () {
            const productId = $(this).data('id');
            const productName = $(this).closest('.card').find('.card-title').text();
            const productPrice = parseInt($(this).closest('.card').find('.card-text').text().replace('đ', ''));

            // Tìm kiếm trong giỏ hàng
            const foundProduct = cart.find(item => item.id === productId);
            if (foundProduct) {
                foundProduct.quantity++;
            } else {
                cart.push({ id: productId, name: productName, price: productPrice, quantity: 1 });
            }

            renderCart();
        });

        function renderCart() {
            let subtotal = 0;
            $('#cart-items').empty();
            cart.forEach(item => {
                $('#cart-items').append(`
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        ${item.name}
                        <span class="badge bg-primary rounded-pill">${item.quantity} x ${item.price}đ</span>
                    </li>
                `);
                subtotal += item.price * item.quantity;
            });

            $('#subtotal').text(subtotal + 'đ');
            const tax = subtotal * 0.1;  // Thuế 10%
            $('#tax').text(tax + 'đ');
            const total = subtotal + tax;
            $('#total').text(total + 'đ');
        }
    </script>
</body>
</html>
